#!/bin/sh

usage="\
    Usage: nauilus-config [--version] [--config] [--cflags] [--libs]"

config_file="@LIBDIR@/nautilusConf.sh"
. $config_file

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --version)
      echo @VERSION@
      ;;
    --config)
      echo $config_file
      ;;
    --cflags)
      echo $NAUTILUS_INCLUDEDIR
      ;;
    --libs)
      echo "$NAUTILUS_LIBDIR $NAUTILUS_LIBS"
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
  esac
  shift
done
