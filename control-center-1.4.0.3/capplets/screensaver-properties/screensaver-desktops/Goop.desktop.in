[Desktop Entry]
_Name=Goop
_Comment=squishy transparent oil and bubbles
Exec=xscreensaver-command -activate
TryExec=goop
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=goop.png
_Author=Jamie Zawinski <jwz@jwz.org>
_ExtendedComment=Goop draws a simulation of bubbles in layers.
Demo=goop -delay 2

[Arg0]
_Name=Count
Type=NRange
_LeftLabel=Count:

Flag=-count
ValType=I[1-100]=10
_Label=Number of bubbles to use.

_Comment=Change the number of bubbles to use.

[Arg1]
_Name=Delay
Type=LRange
Flag=-delay
_LeftLabel=Faster

_RightLabel=Slower

ValType=I[1-500000]=2
_Label=Speed of Motion.

_Comment=Change the delay in cycles.

[Arg2]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.

[Arg3]
_Name=Transparent
Type=Check
Flag=-transparent
Flag2=-non-transparent
_LeftLabel=Have transparent bubbles.

_Comment=Causes the colors to mix when overlapped.

[Arg4]
_Name=Additive
Type=Check
Flag=-additive
Flag2=-subtractive
_LeftLabel=Use additive color model.
