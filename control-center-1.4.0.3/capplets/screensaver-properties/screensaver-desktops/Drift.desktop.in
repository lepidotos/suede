[Desktop Entry]
_Name=Drift
_Comment=Drifting recursive fractal cosmic flames.
Exec=xscreensaver-command -activate
TryExec=drift
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=drift.png
_Author=Scot Draves <spot@cs.cmu.edu>
_ExtendedComment=Drift draws drifting recursive fractal cosmic flames.
Demo=drift -delay 2

[Arg0]
_Name=Colors
Type=NRange
_LeftLabel=Colors:

Flag=-ncolors
ValType=I[1-256]=200
_Label=Number of Colors.

_Comment=Change the number of colors to use.

[Arg1]
_Name=Delay
Type=LRange
Flag=-delay
_LeftLabel=Faster

_RightLabel=Slower

ValType=I[1-500000]=2
_Label=Speed of Motion.

_Comment=Change the delay in cycles.

[Arg2]
_Name=Count
Type=NRange
_LeftLabel=Count:

Flag=-count
ValType=I[1-5000]=1000
_Label=Number of pixels to use.

_Comment=Change the number of bubbles to use.

[Arg3]
_Name=Grow
Type=Check
Flag=-grow
Flag2=-no-grow
_LeftLabel=Fractals should grow.

_Comment=Change whether fractals should grow.

[Arg4]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.

[Arg5]
_Name=Lissajous
Type=Check
Flag=-liss
Flag2=-no-liss
_LeftLabel=Use lissajous figures to get points.

_Comment=Change whether to use lissajous figures to get points.
