[Desktop Entry]
_Name=Crystal
_Comment=Moving polygons, similar to a kaleidescope.
Exec=xscreensaver-command -activate
TryExec=crystal
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=crystal.png
_Author=Jouk Jansen
_ExtendedComment=Moving polygons, similar to a kaleidescope.
Demo=crystal -delay 2

[Arg0]
_Name=Colors
Type=NRange
_LeftLabel=Colors:
Flag=-ncolors
ValType=I[1-256]=64

_Label=Number of Colors.

_Comment=Change the number of colors to use.

[Arg1]
_Name=Delay
Type=LRange
Flag=-delay
_LeftLabel=Faster

_RightLabel=Slower

ValType=I[1-500000]=2
_Label=Speed of Motion.

_Comment=Change the delay in cycles.

[Arg2]
_Name=Count
Type=NRange
_LeftLabel=Count:

Flag=-count
ValType=I[1-5000]=1000
_Label=Number of polygons to use.

_Comment=Change the number of polygons to use.

[Arg3]
_Name=Centre
Type=Check
Flag=-centre
Flag2=-no-centre
_LeftLabel=Center image.

_Comment=Center image.

[Arg4]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.

[Arg5]
_Name=Maxsize
Type=Check
Flag=-maxsize
Flag2=-no-maxsize
_LeftLabel=Have at maximum size

_Comment=Have at maximum size

[Arg6]
_Name=Cell
Type=Check
Flag=-cell
Flag2=-no-cell
_LeftLabel=Cell

_Comment=Cell
