[Desktop Entry]
_Name=Bubbles
_Comment=Lots of random bubbles grow until they pop.
Exec=xscreensaver-command -activate
TryExec=bubbles
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=bubbles.png
_Author=James Macnicol <J.Macnicol@student.anu.edu.au>
_ExtendedComment=Bubbles sprays tiny bubbles which grow until they go pop.
Demo=bubbles -delay 2

[Arg0]
_Name=Delay
Type=LRange
Flag=-delay
_LeftLabel=Faster

_RightLabel=Slower
ValType=I[1-500000]=2

_Label=Speed of Motion.

_Comment=Change the delay in cycles.

[Arg1]
_Name=Simple
Type=Check
Flag=-simple
Flag2=
_LeftLabel=Draw circles instead of pixmap bubbles.

_Comment=Draw circles instead of pixmap bubbles.

[Arg2]
_Name=Broken
Type=Check
Flag=-broken
Flag2=
_LeftLabel=Don't hide bubbles when they pop.

_Comment=Don't hide bubbles when they pop.

[Arg3]
_Name=3D
Type=Check
Flag=-3D
Flag2=
_LeftLabel=Bubbles exist in three dimensions.

_Comment=Bubbles exist in three dimensions.

[Arg4]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.


