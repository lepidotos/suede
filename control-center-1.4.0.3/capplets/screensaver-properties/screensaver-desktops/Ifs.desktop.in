[Desktop Entry]
_Name=Ifs
_Comment=Draws spinning, colliding, iterated-function-system images.
Exec=xscreensaver-command -activate
TryExec=ifs
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=ifs.png
_Author=Massimino Pascal <Pascal.Massimon@ens.fr>
_ExtendedComment=Ifs draws spinning, colliding, iterated-function-system images.
Demo=ifs -delay 2

[Arg0]
_Name=Colors
Type=NRange
_LeftLabel=Colors:

Flag=-ncolors
ValType=I[1-256]=200
_Label=Number of Colors.

_Comment=Change the number of colors to use.

[Arg1]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.

