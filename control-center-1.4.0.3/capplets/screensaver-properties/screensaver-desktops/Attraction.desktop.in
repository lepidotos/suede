[Desktop Entry]
_Name=Attraction
_Comment=A show of objects interacting through attractive and repulsive forces.
Exec=xscreensaver-command -activate
TryExec=attraction
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=attraction.png
_Author=Jamie Zawinski <jwz@netscape.com>
_ExtendedComment=Attraction is based on interactions of points which attract each other up to a certain distance and then begin to repel each other.
DefaultFlags=-root
Demo=attraction -delay 2

[Arg0]
_Name=Count
Type=NRange
_LeftLabel=Count:

Flag=-points
ValType=I[2-50]=9
_Label=Number of points to use.

_Comment=Change the number of points to use.

[Arg1]
_Name=Threshold
Type=LRange
Flag=-threshold
_LeftLabel=Closer

_RightLabel=Farther

ValType=I[1-1000]=100
_Label=Distance of attraction.

_Comment=Change distance at which attractive force becomes repulsive.

[Arg2]
_Name=Size
Type=LRange
Flag=-size
_LeftLabel=Size of point.

_Comment=Change size of points.

[Arg3]
_Name=Delay
Type=LRange
Flag=-delay
_LeftLabel=Faster

_RightLabel=Slower

ValType=I[1-500000]=2
_Label=Speed of Motion.

_Comment=Change the delay in cycles.

[Arg4]
_Name=Radius
Type=LRange
Flag=-radius
_LeftLabel=Smaller

_RightLabel=Larger

ValType=I[50-400]=200
_Label=Initial spacing radius of points.

_Comment=Change the spacing radius of the points.

[Arg5]
_Name=Glow
Type=Check
Flag=-glow
Flag2=
_LeftLabel=Have points glow vary with acceleration.

_Comment=Have points glow vary with acceleration.

[Arg6]
_Name=Orbit
Type=Check
Flag=-orbit
Flag2=
_LeftLabel=Have initial forces on each point be tangential to original circle.

_Comment=Have initial forces on each point be tangential to original circle.

