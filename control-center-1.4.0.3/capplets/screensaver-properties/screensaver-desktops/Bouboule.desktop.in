[Desktop Entry]
_Name=Bouboule
_Comment=A blob of bubbles spinning/moving around the screen.
Exec=xscreensaver-command -activate
TryExec=bouboule
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=bouboule.png
_Author=Jeremie Petit <jpetit@essi.fr>
_ExtendedComment=Bouboule changes shape and size in a blob like form.
DefaultFlags=-root
Demo=bouboule -delay 2

[Arg0]
_Name=Colors
Type=NRange
_LeftLabel=Colors:

Flag=-ncolors
ValType=I[1-256]=64
_Label=Number of Colors.

_Comment=Change the number of colors to use.

[Arg1]
_Name=Delay
Type=LRange
Flag=-delay
_LeftLabel=Faster

_RightLabel=Slower

ValType=I[1-500000]=2
_Label=Speed of Motion.

_Comment=Change the delay in cycles.

[Arg2]
_Name=Count
Type=NRange
_LeftLabel=Count:

Flag=-count
ValType=I[1-10000]=1000
_Label=Number of bubbles to use.

_Comment=Change the number of bubbles to use.

[Arg3]
_Name=3D
Type=Check
Flag=-3d
Flag2=
_LeftLabel=Use red/blue 3d seperation.

_Comment=Use red/blue 3d seperation.

[Arg4]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.

