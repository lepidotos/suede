[Desktop Entry]
_Name=Forest
_Comment=Draws a fractal forest.
Exec=xscreensaver-command -activate
TryExec=forest
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=forest.png
_Author=Pascal Pensa <pensa@aurora.unice.fr>
_ExtendedComment=Fractal draws a fractal forest.
Demo=forest -delay 2

[Arg0]
_Name=Colors
Type=NRange
_LeftLabel=Colors:

Flag=-ncolors
ValType=I[1-256]=100
_Label=Number of Colors.

_Comment=Change the number of colors to use.

[Arg1]
_Name=Cycles
Type=LRange
Flag=-cycles
_LeftLabel=Faster

_RightLabel=Slower

ValType=I[1-500000]=2
_Label=Delay between redraws.

_Comment=Change the delay in cycles.

[Arg2]
_Name=Count
Type=NRange
_LeftLabel=Count:

Flag=-count
ValType=I[1-1000]=100
_Label=Number of trees to use.

_Comment=Change the number of trees to use.

[Arg3]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.

