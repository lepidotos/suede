[Desktop Entry]
_Name=Pedal
_Comment=Pretty geometric picture program.
Exec=xscreensaver-command -activate
TryExec=pedal
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=pedal.png
_Author=Dale Moore <Dale.Moore@cs.cmu.edu>
_ExtendedComment=Pedal Displays pretty geometric pictures.
Demo=pedal -delay 2

[Arg0]
_Name=Delay
Type=LRange
Flag=-delay
_LeftLabel=Shorter

_RightLabel=Longer

ValType=I[2-30]=5
_Label=Time to show each picture.

_Comment=Change the time each picture is shown.

[Arg1]
_Name=Maxlines
Type=LRange
Flag=-maxlines
_LeftLabel=Less

_RightLabel=More

ValType=I[15-5000]=200
_Label=Maximum number of lines.

_Comment=Change maximum number of lines.

[Arg3]
_Name=Fadedelay
Type=LRange
Flag=-fadedelay
_LeftLabel=Shorter

_RightLabel=Longer

ValType=I[1-500000]=20
_Label=Time to fade away.

_Comment=Change time to fade away.

[Arg2]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.
