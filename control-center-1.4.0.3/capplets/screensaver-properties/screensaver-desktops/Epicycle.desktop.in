[Desktop Entry]
_Name=Epicycle
_Comment=Draws a point moving around a circle which moves around a circle.
Exec=xscreensaver-command -activate
TryExec=epicycle
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=epicycle.png
_Author=James Youngman <jay@gnu.org>
_ExtendedComment=Epicycle draws the path traced out by a point on the edge of a circle that is rotating around the rim of another circle, and so on.
Demo=epicycle -delay 2

[Arg0]
_Name=Delay
Type=LRange
Flag=-delay
_LeftLabel=Faster

_RightLabel=Slower

ValType=I[1-500000]=2
_Label=Speed of Motion.

_Comment=Change the delay in cycles.

[Arg1]
_Name=Holdtime
Type=NRange
Flag=-holdtime
_LeftLabel=Seconds

ValType=I[1-15]=3
_Label=Time finished product is shown.

_Comment=When the figure is complete, epicycle pauses this number of seconds.

[Arg2]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.

