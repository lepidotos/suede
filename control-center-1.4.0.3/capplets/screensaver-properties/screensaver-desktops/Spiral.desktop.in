[Desktop Entry]
_Name=Spiral
_Comment=The spiral program draws moving circular spiral patterns.
Exec=xscreensaver-command -activate
TryExec=spiral
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=spiral.png
_Author=Darrick Brown, Peter Schmitzberger, and Jamie Zawinski
_ExtendedComment=The spiral program draws moving circular spiral patterns.
Demo=spiral -delay 2

[Arg0]
_Name=delay
Type=LRange
ValType=I[1-20]=2
Flag=-delay
_LeftLabel=Time between redraws:

_RightLabel=Seconds

_Comment=Changes the time between redrawing the screen.

[Arg1]
_Name=Cycles
Type=LRange
Flag=-cycles
_LeftLabel=Faster

_RightLabel=Slower

ValType=I[1-500000]=350
_Label=Speed of Motion.

_Comment=Change the delay in cycles.

[Arg2]
_Name=Colors
Type=NRange
_LeftLabel=Colors:

Flag=-ncolors
ValType=I[1-256]=64
_Label=Number of Colors

_Comment=Change the number of colors to use.

[Arg3]
_Name=Count
Type=NRange
_LeftLabel=Count:

Flag=-count
ValType=I[5-1000]=40
_Label=Number to use.

_Comment=Change the number to use.

[Arg4]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.
