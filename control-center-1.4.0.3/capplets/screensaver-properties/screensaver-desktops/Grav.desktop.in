[Desktop Entry]
_Name=Grav
_Comment=Draws a simple orbital simulation.
Exec=xscreensaver-command -activate
TryExec=grav
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=grav.png
_Author=Greg Bowering <greg@smug.student.adelaide.edu.au>
_ExtendedComment=Grav draws a simple orbital simulation.
Demo=grav -delay 2

[Arg0]
_Name=Colors
Type=NRange
_LeftLabel=Colors:

Flag=-ncolors
ValType=I[1-256]=200
_Label=Number of Colors.

_Comment=Change the number of colors to use.

[Arg1]
_Name=Count
Type=NRange
_LeftLabel=Count:

Flag=-count
ValType=I[1-50]=12
_Label=Number of planets to use.

_Comment=Change the number of planets to use.

[Arg3]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.

[Arg4]
_Name=Decay
Type=Check
Flag=-decay
Flag2=-no-decay
_LeftLabel=Orbit should decay.

_Comment=Change whether orbit should decay.

[Arg5]
_Name=Trail
Type=Check
Flag=-trail
Flag2=-no-trail
_LeftLabel=Objects should leave trails behind them.

_Comment=Change whether objects should leave a trail.
