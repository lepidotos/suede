[Desktop Entry]
_Name=Blitspin
_Comment=Rotates a bitmap in an interesting way.
Exec=xscreensaver-command -activate
TryExec=blitspin
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=blitspin.png
_Author=Jamie Zawinski <jwz@netscape.com>
_ExtendedComment=Blitspin takes a bitmap and repeatedly rotates it by 90 degrees using logical operations.
Demo=blitspin -delay 2

[Arg0]
_Name=Delay
Type=LRange
Flag=-delay
_LeftLabel=Faster

_RightLabel=Slower

ValType=I[1-500000]=2
_Label=Speed of rotation

_Comment=Change the delay between steps of rotation process.

[Arg1]
_Name=Delay2
Type=LRange
Flag=-delay2
_LeftLabel=Faster

_RightLabel=Slower

ValType=I[1-500000]=5000
_Label=Speed of the 90 degree rotation.

_Comment=Change the delay between each 90 degree rotation.

[Arg2]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.

