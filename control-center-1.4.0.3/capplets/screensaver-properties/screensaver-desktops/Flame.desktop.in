[Desktop Entry]
_Name=Flag
_Comment=Draws a waving flag.
Exec=xscreensaver-command -activate
TryExec=flag
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=flag.png
_Author=Charles Vidal <vidalc@univ-mlv.fr>
_ExtendedComment=Flag draws a waving flab, containing text or an image.
DefaultFlags=-root
Demo=flag -delay 2

[Arg0]
_Name=Colors
Type=NRange
_LeftLabel=Colors:

Flag=-ncolors
ValType=I[1-256]=64
_Label=Number of Colors.

_Comment=Change the number of colors to use.

[Arg1]
_Name=Cycles
Type=LRange
Flag=-cycles
_LeftLabel=Faster

_RightLabel=Slower

ValType=I[50-500000]=3000
_Label=Delay between switches.

_Comment=Change the delay between changing modes.

[Arg3]
_Name=Size
Type=NRange
_LeftLabel=Size:

Flag=-size
ValType=I[1-8]=4
_Label=Size of pixels

_Comment=Change the size of pixels in the flag.

[Arg4]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.
