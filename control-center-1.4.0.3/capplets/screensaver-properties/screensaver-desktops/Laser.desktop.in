[Desktop Entry]
_Name=Laser
_Comment=Draws vaguely laser-like moving lines.
Exec=xscreensaver-command -activate
TryExec=laser
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=laser.png
_Author=Pascal Pensa
_ExtendedComment=Draws laser-like lines moving around a central focal point in varying numbers and colors.
Demo=laser -delay 2

[Arg0]
_Name=Duration
Type=LRange
_LeftLabel=Shorter

_RightLabel=Longer

Flag=-cycles
ValType=I[10-1000]=200
_Label=Duration of laser burst.

_Comment=Duration of the laser burst.  After the burst has finished, It will move to a new location on the screen.

[Arg1]
_Name=Count
Type=NRange
_LeftLabel=Segments:

Flag=-count
ValType=I[1-20]=10
_Label=Size of burst.

_Comment=Number of segments per laser burst.

[Arg2]
_Name=Mono
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.
