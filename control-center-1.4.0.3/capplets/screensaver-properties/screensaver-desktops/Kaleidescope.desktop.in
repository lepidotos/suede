[Desktop Entry]
_Name=Kaleidescope
_Comment=Draws rotating line segments.
Exec=xscreensaver-command -activate
TryExec=kaleidescope
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=kaleidescope.png
_Author=Ron Tapia <tapia@nmia.com>
_ExtendedComment=Kaleidescope draws line segments in a symmetric pattern.
Demo=kaleidescope -delay 2

[Arg0]
_Name=Segments
Type=NRange
Flag=-nsegments
_LeftLabel=Segments
ValType=I[1-50]=7

_Label=Number of segments.

_Comment=Change number of segments.

[Arg1]
_Name=Trails
Type=LRange
Flag=-ntrails
_LeftLabel=Less

_RightLabel=More

ValType=I[10-500]=100
_Label=Number of trails.

_Comment=Change number of trails.

[Arg2]
_Name=Delay
Type=LRange
Flag=-delay
_LeftLabel=Faster

_RightLabel=Slower

ValType=I[1-500000]=2
_Label=Speed of Motion.

_Comment=Change the delay in cycles.

[Arg3]
_Name=Monochrome
Type=Check
Flag=-color_mode mono
Flag2=-color_mode nice
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.

