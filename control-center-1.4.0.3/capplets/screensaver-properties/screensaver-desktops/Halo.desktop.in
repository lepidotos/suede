[Desktop Entry]
_Name=Halo
_Comment=Draw circular patterns.
Exec=xscreensaver-command -activate
TryExec=halo
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=halo.png
_Author=Jamie Zawinski <jwz@jwz.org>
_ExtendedComment=Halo draws patterns based on circles.
Demo=halo -delay 500

[Arg0]
_Name=Colors
Type=NRange
_LeftLabel=Colors:

Flag=-ncolors
ValType=I[1-256]=100
_Label=Number of Colors.

_Comment=Change the number of colors to use.

[Arg1]
_Name=Count
Type=NRange
_LeftLabel=Count:

Flag=-count
ValType=I[1-100]=10
_Label=Number of circles to use.

_Comment=Change the number of circles to use.

[Arg2]
_Name=Delay
Type=LRange
Flag=-delay
_LeftLabel=Faster

_RightLabel=Slower

ValType=I[1-500000]=2
_Label=Speed of Motion.

_Comment=Change the delay in cycles.

[Arg3]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.

[Arg4]
_Name=Mode
Type=Check
Flag=-mode ramp
Flag2=-mode seuss
_LeftLabel=Use a gradient of colors between circles.

_Comment=Change to alternating striped curves.

[Arg5]
_Name=Animate
Type=Check
Flag=-animate
Flag2=
_LeftLabel=Animate circles.

_Comment=Change to animated circles.

[Arg6]
_Name=Cycle
Type=Check
Flag=-cycle
Flag2=-no-cycle
_LeftLabel=Cycle through colormap.

_Comment=Change to cycle through colormap.
