[Desktop Entry]
_Name=Hopalong
_Comment=Draws real plane fractals
Exec=xscreensaver-command -activate
TryExec=hopalong
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=hopalong.png
_Author=Patrick J. Naughton <naughton@eng.sun.com>
_ExtendedComment=Hopalong generates real plan fractals.
Demo=hopalong -delay 2

[Arg0]
_Name=Colors
Type=NRange
_LeftLabel=Colors:

Flag=-ncolors
ValType=I[1-256]=200
_Label=Number of Colors.

_Comment=Change the number of colors to use.

[Arg1]
_Name=Cycles
Type=LRange
Flag=-cycles
_LeftLabel=Faster

_RightLabel=Slower

ValType=I[1-500000]=2500
_Label=Speed of Motion.

_Comment=Change the delay in cycles.

[Arg2]
_Name=Count
Type=LRange
_LeftLabel=Less

_RightLabel=More

Flag=-count
ValType=I[10-10000]=1000
_Label=Number of pixels before a color change.

_Comment=Change the number of pixels before a color change.

[Arg3]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.

