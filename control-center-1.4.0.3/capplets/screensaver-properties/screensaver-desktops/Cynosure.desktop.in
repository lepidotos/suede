[Desktop Entry]
_Name=Cynosure
_Comment=Franticly displays colored rectangles.
Exec=xscreensaver-command -activate
TryExec=cynosure
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=cynosure.png
_Author=Stephen Linhart, Ozymandias Desiderata, Jamie Zawinski
_ExtendedComment=Cynosure franticly displays colored rectangles.
Demo=cynosure -delay 2

[Arg0]
_Name=Colors
Type=NRange
_LeftLabel=Colors:

Flag=-ncolors
ValType=I[1-256]=64
_Label=Number of Colors.
_Comment=Change the number of colors to use.

[Arg1]
_Name=Iterations
Type=LRange
Flag=-iterations
_LeftLabel=Less
_RightLabel=More

ValType=I[1-100]=2
_Label=Number of iterations.
_Comment=Change the number of iterations.

[Arg2]
_Name=Delay
Type=LRange
Flag=-delay
_LeftLabel=Faster
_RightLabel=Slower

ValType=I[1-500000]=2
_Label=Speed of Motion.
_Comment=Change the delay in cycles.

[Arg3]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.
_Comment=Change to display in monochrome.

