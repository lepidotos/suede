[Desktop Entry]
_Name=Decayscreen
_Comment=Makes a screen melt down
Exec=xscreensaver-command -activate
TryExec=decayscreen
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=decayscreen.png
_Author=Vivek Khera <khera@cs.duke.edu>
_ExtendedComment=Decayscreen makes a screen look like its melting down.
Demo=decayscreen -delay 2

[Arg0]
_Name=Delay
Type=LRange
Flag=-delay
_LeftLabel=Faster

_RightLabel=Slower

ValType=I[1-500000]=2
_Label=Speed of Motion.

_Comment=Change the delay in cycles.

[Arg1]
_Name=Monochrome
Type=Check
Flag=-mono
Flag2=
_LeftLabel=Display screensaver in monochrome.

_Comment=Change to display in monochrome.


