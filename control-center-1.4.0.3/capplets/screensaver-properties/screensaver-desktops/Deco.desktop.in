[Desktop Entry]
_Name=Deco
_Comment=Draw tacky 70s basement wall panelling.
Exec=xscreensaver-command -activate
TryExec=deco
Terminal=0
Type=Application

[Screensaver Data]
WindowIdCommand=-window-id
RootCommand=-root
Icon=deco.png
_Author=Jamie Zawinski <jwz@jwz.org>\nMichael D. Bayne <mdb@go2net.com>
_ExtendedComment=Deco draws tacky 70s basement wall panelling.
Demo=deco -delay 2


[Arg0]
_Name=delay
Type=LRange
ValType=I[1-20]=2
Flag=-delay
_LeftLabel=Time between redraws:

_RightLabel=seconds

_Comment=Changes the time between redrawing the screen.

[Arg1]
_Name=color
Type=Check
Flag=
Flag2=-mono
_LeftLabel=Use color when drawing.

_Comment=Determines whether to draw the panels in color, or in black and white.

[Arg2]
_Name=color-cycle
Type=Check
Flag=-cycle
Flag2=-no-cycle
_LeftLabel=Cycle through colors.

_Comment=This will cause the panes to flash.
